<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<% if user_signed_in? %>
<% if current_user.id == 1 %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.order_date %></td>
        <td><%= order.user.email %></td>
        <td><%= order.status %> - (</td>
        <td><%= link_to 'Show', order %> | </td>
        <td><%= link_to 'Edit', edit_order_path(order) %> | </td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %> )</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>

<% else %>

<br>
<h3 style="text-align: center">Dublin Rent Bike Staff Only Section.</h3>

<% end %>

<% else %>

<br>
<h3 style="text-align: center"><%= link_to 'You will need to login', new_user_session_path %></h3>

<% end %>